<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

<bean class="com.Employee" id="emp1" scope="singleton"></bean>

<bean class="com.Employee" id="emp2" scope="prototype"></bean>

<bean class="com.Employee" id="emp3">
	<constructor-arg value="100"></constructor-arg>
	<constructor-arg value="Steven"></constructor-arg>
	<constructor-arg value="12000"></constructor-arg>
	
</bean>

<bean class="com.Employee" id="emp33">
	<constructor-arg value="107"></constructor-arg>
	<constructor-arg value="Ajay"></constructor-arg>
	<constructor-arg value="18000"></constructor-arg>
	<constructor-arg ref="add"></constructor-arg>
</bean>

<bean class="com.Employee" id="emp4">
	<property name="id" value="101"></property>

	<property name="salary" value="15000"></property>
		
</bean>


<bean class="com.Address" id="address1">
	<property name="city" value="Bangalore"></property>
	<property name="state" value="Kar"></property>
</bean>

<bean class="com.Address" id="address">
	<property name="city" value="Mumbai"></property>
	<property name="state" value="Mh"></property>
</bean>

<bean class="com.Employee" id="employee" autowire="byName">
	<property name="id" value="102"></property>
	<property name="name" value="Raj"></property>
<!--	<property name="address" ref="address1"></property>  
	<property name="laddress" ref="address"></property> 	-->
</bean>

</beans>


